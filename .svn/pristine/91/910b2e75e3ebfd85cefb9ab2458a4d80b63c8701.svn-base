<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<!-- tiles 설정 -->
<tiles-definitions>
	
	<!-- login-layout 설정 시작-->
	<definition name="empty" template="/WEB-INF/views/tiles/empty.jsp">
		<put-attribute name="content" value="" />
	</definition>
	
	<definition name="login/*" extends="empty">
		<put-attribute name="content" value="/WEB-INF/views/login/{1}.jsp" />
	</definition>
	<!-- login-layout 설정 끝-->
	
	
	<!-- all-layout(login 제외) 설정 시작-->
	<definition name="tiles-layout" template="/WEB-INF/views/tiles/layout.jsp">
		<put-attribute name="header" value="/WEB-INF/views/tiles/header.jsp" />
		<put-attribute name="aside" value="/WEB-INF/views/tiles/aside.jsp" />
		<put-attribute name="body" value="" />
		<put-attribute name="footer" value="/WEB-INF/views/tiles/footer.jsp" />
	</definition>
	
	<definition name="*" extends="tiles-layout">
		<put-attribute name="body" value="/WEB-INF/views/{1}.jsp" />
	</definition>
	
	<definition name="*/*" extends="tiles-layout">
		<put-attribute name="body" value="/WEB-INF/views/{1}/{2}.jsp" />
	</definition>
	<!-- all-layout(login 제외) 설정 끝 -->	
	

	
</tiles-definitions>







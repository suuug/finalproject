<!-- apexcharts -->
<script src="/resources/dist/assets/libs/apexcharts/apexcharts.min.js"></script>
<script>
var labelsData = [];
var seriesData = [];

	$.ajax({
	    url: "/project/projChart",
	    type: "GET",
	    data: {
	        'projId': "${sessionScope.projId }"
	    },
	    async: false,
	    success: function (res) {
	        console.log(res);
	        
	        labelsData = Object.keys(res);
	        $.each(res, function(i, v) {
	        	seriesData.push(v);
	        	console.log(v);
	        })
	
	    },
	    dataType: "json"
	})
	
	options = {
	    chart: {
	        height: 320,
	        type: "pie"
	    },
// 	    series: [44, 55, 41, 17],
	    series: seriesData,
// 	    labels: ["Series 1", "Series 2", "Series 3", "Series 4", "Series 5"],
	    labels: labelsData,
// 	    colors: ["#6fbe36", "#6c6ff5", "#fcb92c", "#2ec8f1", "#ff5d5d"],
	    colors: ["#6c6ff5", "#2ec8f1", "#00b19c", "#ff5d5d"],
	    legend: {
	        show: !0,
	        position: "bottom",
	        horizontalAlign: "center",
	        verticalAlign: "middle",
	        floating: !1,
	        fontSize: "14px",
	        offsetX: 0,
	        offsetY: 5
	    },
	    responsive: [{
	        breakpoint: 600,
	        options: {
	            chart: {
	                height: 240
	            },
	            legend: {
	                show: !1
	            }
	        }
	    }]
	};
	(chart = new ApexCharts(document.querySelector("#pie_chart"), options)).render();
</script>

